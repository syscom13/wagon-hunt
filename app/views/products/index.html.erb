<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class="title text-center">ALL PRODUCTS</h1>
      <ul>
        <% @products.each do |product| %>
          <div class="product">

            <div class="upvote_container" id="product-<%= product.id %>">
              <%= render "upvotes/show_upvote", product: product %>
            </div>

            <% if product.photo? %>
              <%= cl_image_tag(product.photo.path, :height => 117, :crop => :fill, class: "product-image") %>
            <% else %>
              <img src="<%= image_path "background.jpg" %>" alt="startup image" class="product-image hidden-xs">
            <% end %>

            <div class='product-body'>
              <h3><%= link_to product.name, product_path(product) %></h3>
              <p><%= product.tagline %></p>
            </div>
            <ul class="list-inline product-controls hidden-sm hidden-xs">
              <li>
                <%= link_to product_path(product) do %>
                  <i class="fa fa-eye"></i>
                <% end %>
              </li>
              <li>
                <%= link_to edit_product_path(product) do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
              </li>
              <li>
                <%= link_to product_path(product), method: :delete do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </li>
            </ul>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
